<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_actu_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/actu_4_participation"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_actu_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publié le 22 mars 2015"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_actu_titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taux de participation à 12h00 du 1er tour"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tv_actu_texte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Les élections départementales ont lieu le 22 mars pour le premier tour et le 29 mars pour le second tour."
                android:textSize="15dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tv_actu_lien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliquez ici pour les consulter"
                android:textSize="15dp"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

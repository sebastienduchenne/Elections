<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_voter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_indic_voter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le vote a lieu jusqu'Ã  20h."
            android:layout_margin="10dp"
            android:textSize="15dp"/>


        <Button
            android:id="@+id/bt_voter_onglet_candidats"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:background="@drawable/bt_bleu"
            android:textColor="@color/blanc"
            android:textSize="18dp"
            android:text="Voter" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="selectionnez"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:id="@+id/tv_indic_voir_prog" />

    <FrameLayout
        android:id="@+id/fl_liste_candidat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.project.duchennesebastien.ListeCandidatsAvantVoteFragment"
        android:visibility="gone"/>


    <FrameLayout
        android:id="@+id/fl_liste_candidat_reims"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.project.duchennesebastien.ListeCandidatsAvantVoteReimsFragment"
        android:visibility="gone"/>




</LinearLayout>
